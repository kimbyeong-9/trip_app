.companion-button {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #007AFF 0%, #0056CC 50%, #4A90E2 100%);
  background-size: 200% 200%;
  border: none;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 8px 25px rgba(0, 122, 255, 0.4), 0 4px 12px rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  outline: none;
  animation: gradientShift 3s ease-in-out infinite, pulse 2s ease-in-out infinite;
}

.companion-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(255, 255, 255, 0.05) 100%);
  border-radius: 50%;
  opacity: 0.8;
  transition: opacity 0.3s ease;
  animation: shimmer 3s ease-in-out infinite;
}

.companion-button::after {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #007AFF, #4A90E2, #007AFF, #4A90E2);
  background-size: 400% 400%;
  border-radius: 50%;
  z-index: -1;
  opacity: 0.6;
  animation: gradientShift 4s ease-in-out infinite;
  filter: blur(2px);
}

.companion-button:hover {
  transform: scale(1.08) translateY(-2px);
  box-shadow: 0 15px 40px rgba(0, 122, 255, 0.7), 0 8px 25px rgba(0, 0, 0, 0.3), 0 0 0 12px rgba(0, 122, 255, 0.15);
  animation-play-state: paused;
}

.companion-button:hover::before {
  opacity: 1;
  animation-play-state: paused;
}

.companion-button:hover::after {
  opacity: 0.8;
  animation-play-state: paused;
}

.companion-button:active {
  transform: scale(1.02) translateY(0);
  box-shadow: 0 6px 20px rgba(0, 122, 255, 0.4), 0 3px 10px rgba(0, 0, 0, 0.15);
}

.companion-icon {
  margin-bottom: 3px;
  z-index: 1;
  position: relative;
}

