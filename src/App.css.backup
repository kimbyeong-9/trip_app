  font-size: 20px;
  font-weight: 700;
  color: #333;
  margin: 0 0 8px 0;
}

.option-content p {
  font-size: 14px;
  color: #666;
  margin: 0 0 12px 0;
  line-height: 1.4;
}

.option-features {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.feature-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
}

.option-arrow {
  color: #007AFF;
  transition: transform 0.2s ease;
}

.create-option:hover .option-arrow {
  transform: translateX(4px);
}

/* 도움말 */
.create-help {
  background: white;
  border-radius: 16px;
  padding: 24px;
  border: 1px solid #e9ecef;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 16px;
  margin-bottom: 20px;
}

.help-item:last-child {
  margin-bottom: 0;
}

.help-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.help-text {
  flex: 1;
}

.help-text strong {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.help-text span {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

/* 여행 일정 등록 페이지 모바일 반응형 */
@media (max-width: 768px) {
  .travel-schedule-create-header {
    padding: 12px 16px;
  }
  
  .travel-schedule-create-header h1 {
    font-size: 16px;
  }
  
  .travel-schedule-create-content {
    padding: 24px 16px;
  }
  
  .create-intro h2 {
    font-size: 20px;
  }
  
  .create-intro p {
    font-size: 14px;
  }
  
  .create-options {
    gap: 16px;
    margin-bottom: 32px;
  }
  
  .create-option {
    padding: 20px;
    gap: 16px;
  }
  
  .option-icon {
    width: 60px;
    height: 60px;
  }
  
  .option-content h3 {
    font-size: 18px;
  }
  
  .option-content p {
    font-size: 13px;
  }
  
  .create-help {
    padding: 20px;
  }
  
  .help-item {
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .help-icon {
    font-size: 20px;
  }
  
  .help-text strong {
    font-size: 15px;
  }
  
  .help-text span {
    font-size: 13px;
  }
}

@media (max-width: 480px) {
  .travel-schedule-create-content {
    padding: 20px 12px;
  }
  
  .create-intro {
    margin-bottom: 32px;
  }
  
  .create-intro h2 {
    font-size: 18px;
  }
  
  .create-option {
    padding: 16px;
    gap: 12px;
  }
  
  .option-icon {
    width: 50px;
    height: 50px;
  }
  
  .option-content h3 {
    font-size: 16px;
  }
  
  .option-content p {
    font-size: 12px;
  }
  
  .feature-tag {
    font-size: 11px;
    padding: 3px 6px;
  }
  
  .create-help {
    padding: 16px;
  }
}

